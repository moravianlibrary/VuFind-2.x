          <li class="active"><a href="<?=$this->url('home') ?>">Home</a> <span class="divider">&gt;</span></li>
          <?=$this->layout()->breadcrumbs ?>
        </ul>
      <? endif; ?>
      <div class="main row-fluid">
        <?=$this->layout()->content?>
